html,
body
	height 100%


$bg
	//background main
	background url(/assets/img/bg-3.jpg) no-repeat center center / cover
	height 100%
	.content
		width 95%
		align(both)
		text-align center

// Header home
.header-site
	@extends $bg
	h1,h2
		color: sec
		text-align center
	.site-title
		font-size rem(60px)
		line-height 1
		margin-top -80px
		display block
		+above(cut)
			margin-bottom 0
			font-size rem(100px)
	.site-description
		font-size rem(20px)
		display block
		margin rem(30px) 0
		+above(cut)
			font-size rem(40px)
.bar-header
	//background main
	background transparent
	padding rem(10px) rem(20px)
	//box-shadow 0 -3px 9px #000
	position fixed
	width 100%
	height 60px
	z-index 10

	h2
		margin-left 40px
		margin-top 0
		padding 0
		color sec

		a
			text-decoration none
			//color sec
			color main

// Header Post
.header-post
	@extends $bg
	.content
		+above(cut)
			center(1000px)
	.subheader
		display table
		padding 20px
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		text-transform uppercase
		font-size rem(30px)
		margin 0 0 30px
		+above(cut)
			font-size rem(60px)
	.subtitle
		mainFont(300)
		font-size rem(20px)
	h1,.subtitle, .date
		color sec
		text-align center
	p
		color sec
		text-decoration none
		mainFont(300)
		font-size rem(18px)

header.post-title
	text-align center
	padding-top 80px
	padding-bottom 0
	.content
		+above(cut)
			center(1000px)
	.subheader
		display table
		padding 20px
		a
			border 2px solid main
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		text-transform uppercase
		text-align center
		font-size rem(15px)
		margin 0 0 10px
		+above(cut)
			font-size rem(40px)
	.subtitle
		mainFont(300)
		font-size rem(20px)
	h1,.subtitle, .date
		color #222
		text-align center
	p
		color main
		text-decoration none
		mainFont(300)
		font-size rem(18px)